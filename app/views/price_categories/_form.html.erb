<%= form_for @price_category, html: { role: "form", class: "form-horizontal" } do |f| %>
  <%= render "shared/error_messages", target: @price_category %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :display_order, "Display Order", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :display_order, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><%= f.check_box :published %>Publish this price category?</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

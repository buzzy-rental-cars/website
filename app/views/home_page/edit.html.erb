<% title "Edit Home Page" %>

<%= form_for @home_page, html: { role: "form", class: "form-horizontal" } do |f| %>
  <%= render "shared/error_messages", target: @home_page %>
  <div class="form-group">
    <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, "Phone", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, "Facebook", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :facebook, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, "Twitter", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :twitter, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, "Picture", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag(@home_page.picture_url(:regular)) if @home_page.picture? %>
      <%= f.file_field :picture, class: "form-control" %>
      <%= f.hidden_field :picture_cache %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control", rows: 5 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

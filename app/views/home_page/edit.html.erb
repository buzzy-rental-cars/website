<% title "Edit Home Page" %>

<%= form_for @home_page, html: { role: "form", class: "form-horizontal" } do |f| %>
  <%= render "shared/error_messages", target: @home_page %>
  <div class="form-group">
    <%= f.label :promotional_message, "Promotional Message", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :promotional_message, class: "form-control", rows: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :promoted_page_id, "Promoted Page", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :promoted_page_id, options_for_select(Page.where(published: true).pluck(:name, :id), selected: @home_page.promoted_page_id), {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, "Phone", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, "Facebook", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :facebook, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, "Twitter", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :twitter, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

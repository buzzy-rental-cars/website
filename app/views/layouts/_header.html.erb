  <div class="col-xs-1 logo">
    <%= image_tag "100-percent-new-zealand-owned-and-operated.png", alt: "100% New Zealand Owned & Operated", width: 75, height: 75 %>
  </div>
  <div class="col-xs-2 logo">
    <%= image_tag "rental-vehicle-association.png", alt: "Rental Vehicle Association", width: 112, height: 75 %>
  </div>
  <div class="col-xs-1 logo">
    <%= link_to((image_tag "facebook-logo.png", alt: "Facebook", width: 75, height: 75), "http://www.facebook.com/buzzyrentalcars") %>
  </div>
  <div class="col-xs-1 logo">
    <%= link_to((image_tag "twitter-logo.png", alt: "Twitter", width: 75, height: 75), "http://www.twitter.com/buzzyrentalcars") %>

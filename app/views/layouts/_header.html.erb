<% if user_signed_in? %>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">Logged in as <%= link_to_twitter current_user.name %>.
          You <%= current_user.administrator? ? "are" : "are not" %> an admin.</span>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Log Out", destroy_user_session_path %></li>
        <% if current_user.administrator? %>
          <li><%= link_to "Pages", pages_path %></li>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Vehicle Categories", vehicle_categories_path %></li>
          <li><%= link_to "Price Categories", price_categories_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
<% end %>


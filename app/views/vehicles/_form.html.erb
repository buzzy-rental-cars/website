<%= nested_form_for @vehicle, html: { role: "form", class: "form-horizontal" } do |f| %>
  <%= render "shared/error_messages", target: @vehicle %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: "5" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vehicle_type_id, "Vehicle Type", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :vehicle_type_id, options_for_select(VehicleType.all.collect { |vt| [vt.name, vt.id] }, selected: @vehicle.vehicle_type_id), {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo, "Photo", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag(@vehicle.photo_url(:thumbnail)) if @vehicle.photo? %>
      <%= f.file_field :photo, class: "form-control" %>
      <%= f.hidden_field :photo_cache %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :seats, "Seats", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :seats, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :economy_rating, "Economy Rating", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :economy_rating, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :luggage_capacity, "Luggage Capacity", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :luggage_capacity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, "Body", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p>Use <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank">Markdown</a> to format the body.</p>
      <%= f.text_area :body, class: "form-control", rows: "20" %>
    </div>
  </div>
  <div class="form-group">
    <%= render partial: 'illustrations/form', locals: { illustrations: :illustrations, f: f } %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><%= f.check_box :published %>Publish this vehicle?</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<% title "Vehicle Categories" %>

<% if policy(VehicleCategory).new? %>
  <div>
    <%= link_to 'New Vehicle Category', new_vehicle_category_path,
      class: "btn btn-default",
      role: "button"
    %>
  </div>
<% end %>

<% if @vehicle_categories.present? && administrator? %>
  <table class="table">
    <thead>
      <tr>
        <th>Display Order</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price Category</th>
        <th>Published?</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @vehicle_categories.each do |vehicle_category| %>
        <tr>
          <td><%= vehicle_category.display_order %></td>
          <td><%= vehicle_category.name %></td>
          <td><%= image_tag vehicle_category.photo.url(:thumbnail) %></td>
          <td><%= vehicle_category.price_category.name %></td>
          <td><%= vehicle_category.published? ? "Yes" : "No" %></td>
          <td>
            <%= link_to 'Edit Vehicle Category', edit_vehicle_category_path(vehicle_category),
              class: "btn btn-default",
              role: "button"
            %>
          </td>
          <td>
            <%= link_to 'Delete Vehicle Category', vehicle_category, data:
              { confirm: 'Are you sure you want to delete this vehicle category?' },
              method: :delete,
              class: "btn btn-danger",
              role: "button"
            %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
